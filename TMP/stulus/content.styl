@import "variables.styl"

/* Content styles */
.content
  // padding-top 95px
  relative false
  min-height 100%
  padding-left 210px
  background-image url('~images/grid_pattern.svg')
  background-position 0 0
  background-size 60px 60px
  background-repeat repeat
  // absolute 0 0 0
  // overflow auto
  .preloader-mode &
    overflow hidden

.faq
  absolute false 0 35px false
  margin-right -2px
  z-index 100
  display block
  size 30px
  line-height 30px
  font-size 18px
  font-weight 600
  color rgba(23, 229, 178, 0.2)
  text-decoration none
  text-align center
  transition color 0.2s linear
  &:hover
    color rgba(23, 229, 178, 1)
 
video
  fixed 50% false false 50%
  size auto
  min-width 0
  min-height 0
  z-index -1
  opacity 0
  transform translate(-50%, -50%)
  background-color #000
  &.show
    opacity 1
    z-index 1000
  &.full
    min-width 100%
    min-height 100%
    transition min-width 0.5s linear,
               min-height 0.5s linear

.sidebar
.page
  // display block
  // z-index -1
  opacity 0
  max-height 0
  overflow hidden
  transition opacity 0.3s linear,
             max-height 0s linear 0.3s,
             overflow 0s linear 0.3s
  // animation page-fade-out 1.5s linear forwards
  &.show
    // display block
    opacity 1
    z-index 1
    overflow initial
    max-height 10000px
    transition opacity 0.3s linear,
               max-height 0s linear,
               overflow 0s linear
    // transition opacity 0.5s linear
    // animation page-fade-in 1.5s linear forwards 1.5s
.page
  relative false
  box-sizing border-box

.background
  absolute 0
  z-index 0
  .line
    size auto 1px
    margin auto
    background-color rgba(255, 255, 255, 0.2)
    border-left 1px solid #FFF
    border-right 1px solid #FFF
    opacity 0
    &.top
      absolute 59px false false 270px
    &.bottom
      absolute false false 300px 270px
      
    &.show
      animation blink 0.5s linear forwards

.blink.show
  animation blink 0.5s linear forwards
@keyframes blink
  0%
    opacity 0
  20%
    opacity .6
  40%
    opacity .2
  60%
    opacity .8
  80%
    opacity .4
  100%
    opacity 1
      
      
.page
  // absolute 0 false false 210px
  
  h1
    text-transform uppercase
    .bold
      font-weight 600
  
  p
    text-align left
