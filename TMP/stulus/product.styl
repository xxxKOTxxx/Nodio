@import "variables.styl"

/* Product styles */
#product
  absolute 0 0 false 210px
  min-height 100%
  .pagination
    size 30px 210px
    absolute 0 30px 0 false
    z-index 10
    margin auto
    .pagination-item
      display block
      relative false
      size 9px
      margin-top 21px
      transform rotate(45deg)
      background-color transparent
      cursor pointer
      &:hover
        .point
          background-color rgba(23, 229, 178, 1)
        
      .point
        display none
        background-color #fff
        transition background-color 0.2s linear
        &.center
          display block
      &.active
        border 1px solid rgba(23, 229, 178, 0.2)
        cursor default
        .point
          background-color rgba(23, 229, 178, 1)
          display block
        
      &:nth-child(even)
        margin-left 30px
      &:nth-child(even)
        margin-right 30px
  .next
    absolute false 0 30px
    z-index 5
    margin auto 
    size 18px
    transform rotate(45deg)
    border-right 1px solid rgba(23, 229, 178, 0.2)
    border-bottom 1px solid rgba(23, 229, 178, 0.2)
    cursor pointer
    .point
      display block
.product
  h1
    absolute 312px false false 0
    z-index 2
    opacity 0
    color #fff
    text-align left
    font-size 38px
    font-weight 300
    text-transform none
    transition opacity 0.5s linear
    .stage-0&
    .stage-1&
      opacity 1
      
    .bold
      font-size 72px
      font-weight 600
  .illustrations
    size 713px 634px
    absolute 0
    z-index 0
    margin auto
    transform-origin 50%, 50%
    .stage-0&
    .stage-1&
    .stage-2&
      opacity 1
    .stage-0&
    .stage-1&
      transform scale(0.8)
    .stage-2&
      transform scale(1)
      transition transform 0.5s linear
      
    .illustration
      absolute 0
      size 100%
      background-size 713px 634px
      background-position 50% 50%
      opacity 0
      &.slide-1
        background-image url('~images/product-slide-1.png')
        transition opacity 0.5s linear 1s
        .stage-0&
          opacity 1
      &.slide-2
        background-image url('~images/product-slide-2.png')
        transition opacity 0.5s linear
        .stage-1&
          opacity 1
      &.slide-3
        background-image url('~images/product-slide-3.png')
        transition opacity 0.5s linear
        .stage-2&
          opacity 1
  .subtitle
  .text
    display none
        