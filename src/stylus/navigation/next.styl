@import "../variables.styl"

/* Next styles */
#next
  absolute false 0 30px
  z-index 5
  margin auto 
  size 18px
  opacity 0
  transform rotate(45deg) translate(-19px,24px)
  border-right 1px solid rgba(23, 229, 178, 0.2)
  border-bottom 1px solid rgba(23, 229, 178, 0.2)
  cursor pointer
  transition border-color 0.2s linear
  animation next-out 0.2s linear forwards
  &:hover
    border-color rgba(23, 229, 178, 1)
  &.show
    animation next-in 0.2s linear forwards
    

@keyframes next-in
  0%
    z-index 10
  1%
    opacity 0
  100%
    opacity 1

@keyframes next-out
  0%
    opacity 1
  99%
    opacity 0
  100%
    z-index -1