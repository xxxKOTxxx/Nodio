@import "../variables.styl"

/* Next styles */
.next-link
  absolute false false 38px 404px
  z-index 5
  size 33px
  opacity 0
  cursor pointer
  fill rgba(23, 229, 178, 0.2)
  transition fill 0.2s linear
  animation next-out 0.2s linear forwards
  &:hover
    fill rgba(23, 229, 178, 1)
  .show &
    animation next-in 0.2s linear forwards

@keyframes next-in
  0%
    z-index 10
  1%
    opacity 0
  100%
    opacity 1

@keyframes next-out
  0%
    opacity 1
  99%
    opacity 0
  100%
    z-index -1