@import "../variables.styl"

/* Common styles */
html
body
  width 100%
  height 100%
  min-height 100%
  font-family "ProximaNova"
  font-size $font-size
  font-weight 300
  color $text-color
  background-color $background-color
  text-shadow 0 0 #000
body
  text-rendering optimizeLegibility
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  -webkit-backface-visibility hidden
  letter-spacing $letter-spacing
  &.preloader-mode
    overflow hidden
svg
  size 100%
  display block
  fill inherit
  &#svg-sprite
    width 0
    height 0
    overflow hidden
    
button
input
  font-family inherit
  
.bold
  font-weight 700
  
.dot
  display inline-block
  size 6px
  margin-left 4px
  background-color #fff
  transform rotate(45deg)

.point
  absolute false
  size 1px
  background-color rgba(23, 229, 178, 1)
  &.top
    top -1px
  &.bottom
    bottom -1px
  &.left
    left -1px
  &.right
    right -1px
  &.center
    absolute 0
    margin auto
    

.links
  display block
  margin-top 55px
  .link
    font-size 16px
    font-weight 100
    text-decoration underline
    color rgba(23, 229, 178, 1)
  .delimiter
    size 1px 11px
    margin 0 50px
    background-color #fff
    display inline-block