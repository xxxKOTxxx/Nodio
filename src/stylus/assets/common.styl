@import "../variables.styl"

/* Common styles */
html
body
  width 100%
  height 100%
  min-height 100%
  font-family "ProximaNova"
  font-size $common-body-font-size
  font-weight 300
  color $common-body-text-color
  background-color $common-body-background-color
body
  // text-rendering optimizeLegibility
  // -webkit-font-smoothing antialiased
  // -moz-osx-font-smoothing grayscale
  // text-size-adjust none
  -webkit-backface-visibility hidden
  letter-spacing $common-body-letter-spacing
  &.preloader-mode
    overflow hidden
svg
  size 100%
  display block
  fill inherit
  &#svg-sprite
    width 0
    height 0
    overflow hidden
    
button
input
textarea
  font-family inherit
  
.bold
  font-weight 700

.point
  absolute false
  size 1px
  background-color $common-point-background-color
  &.top
    top -1px
  &.bottom
    bottom -1px
  &.left
    left -1px
  &.right
    right -1px
  &.center
    absolute 0
    margin auto
    

.links
  display block
  margin-top 55px
  .link
    font-size $common-link-font-size
    font-weight 300
    letter-spacing 1px
    text-decoration none
    color $common-link-color
    border-bottom 1px solid $contacts-button-border-color
    transition border-color $transition-time linear
    &:hover
      border-color $common-link-color
  .delimiter
    size 1px 11px
    margin 0 50px
    background-color $common-delimiter-background-color
    display inline-block

#background
  overflow hidden
  relative false
  width 100%
  background-image url('~images/background.svg')
  background-position 50% 0
  background-size 60px 60px
  background-repeat repeat

#glow
  absolute 0
  z-index 0
  overflow hidden
  opacity 0
  transition opacity 0.5s linear
  &.show
    opacity 1
  svg
    absolute 50% false false 50%
    transform translate(-50%, -50%)
    size 100vmax

@keyframes blink
  0%
    opacity 0
  20%
    opacity .6
  40%
    opacity .2
  60%
    opacity .8
  80%
    opacity .4
  100%
    opacity 1

@keyframes fade-in
  0%
    visibility visible
  1%
    opacity 0
  100%
    opacity 1
    visibility visible

@keyframes scale-in
  0%
    opacity 0
    transform scale(1.5)
  50%
    opacity 0
  100%
    opacity 1
    transform scale(1)

@keyframes scale-in-centered
  0%
    opacity 0
    transform-origin 50% 50%
    transform translate(-50%, -50%) scale(1.5)
  50%
    transform-origin 50% 50%
    opacity 0
  100%
    opacity 1
    transform-origin 50% 50%
    transform translate(-50%, -50%) scale(1)

@keyframes slide-up-centered
  0%
    opacity 0
    top 100%
  50%
    opacity 0
  100%
    top 50%
    opacity 1
    
@keyframes slide-down-centered
  0%
    opacity 0
    top -50%
  50%
    opacity 0
  100%
    top 50%
    opacity 1
    
@keyframes slide-left-centered
  0%
    opacity 0
    left 100%
  50%
    opacity 0
  100%
    top 50%
    opacity 1
    
@keyframes slide-right-centered
  0%
    opacity 0
    left -50%
  50%
    opacity 0
  100%
    left 50%
    opacity 1
    


    
@keyframes slide-up
  0%
    opacity 0
    transform translate(0, -100%)
  50%
    opacity 0
  100%
    opacity 1
    transform translate(0, 0)
    
@keyframes slide-down
  0%
    opacity 0
    transform translate(0, 100%)
  50%
    opacity 0
  100%
    opacity 1
    transform translate(0, 0)

@keyframes slide-left
  0%
    opacity 0
    transform translate(100%, 0)
  50%
    opacity 0
  100%
    opacity 1
    transform translate(0, 0)
    
@keyframes slide-right
  0%
    opacity 0
    transform translate(-100%, 0)
  50%
    opacity 0
  100%
    opacity 1
    transform translate(0, 0)