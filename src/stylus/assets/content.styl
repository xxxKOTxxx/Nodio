@import "../variables.styl"

/* Content styles */
  
.container
  relative false
  width 841px
  margin auto
  min-height 100%
  padding 0 60px 0 119px
  transition padding-left 0.3s linear,
             padding-right 0.3s linear
  .preloader-mode &
    overflow hidden
  
  .pages
    size 100%
    min-height 100vh
    relative false
.page-footer
  padding-bottom 37px
  
.page-content
  &:before
  &:after
    content ''
    display block
    size 100% 0
    transition height 0.2s linear
