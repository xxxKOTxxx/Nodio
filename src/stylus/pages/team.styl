@import "../variables.styl"

/* Team styles */
#team
  .page-content
    padding 71px 0 52px
  .header
  .text-right
    display inline-block
    vertical-align middle
  .header
    font-size 60px
    font-weight bold
    color #fff
    margin-right 70px
    
  .text-right
    width 530px
    font-size 12px
    font-weight 100
    line-height 17px
    color $white-50
  
  .persons
    margin 42px 0 0
  
  .person
    relative false
    display inline-block
    vertical-align top
    size 178px 60px
    margin-right 60px
    margin-bottom 60px
    border-left 1px solid $white-20
    transition border-color $transition-time linear
    cursor pointer
    &:hover
      border-color $white
      
    &.empty
      border 0 none
    .data
      padding 10px 9px
      color $white
      .name
        font-size 21px
        font-weight bold
        margin-bottom 5px
      .position
        font-size 14px
        font-weight 100
        
    .point
      background-color $white
      transition background-color $transition-time linear
    