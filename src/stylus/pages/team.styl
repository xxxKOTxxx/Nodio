@import "../variables.styl"

/* Team styles */
#team
  .page-content
    padding 71px 0 50px
  .header
  .text-right
    display inline-block
    vertical-align middle
  .header
    font-size 60px
    font-weight bold
    color #fff
    margin-right 70px
    
  .text-right
    width 530px
    font-size 14px
    font-weight 100
    line-height 17px
    color rgba(255, 255, 255, 0.2)
  
  .persons
    margin 42px 0 0
  
  .person
    relative false
    display inline-block
    vertical-align top
    size 238px 60px
    margin-bottom 60px
    border-left 1px solid rgba(255, 255, 255, 0.2)
    &.empty
      border 0 none
    .data
      padding 10px 12px
      .name
        font-size 24px
        font-weight bold
      .position
        font-size 18px
        font-weight 100
        
    .point
      background-color #fff
    