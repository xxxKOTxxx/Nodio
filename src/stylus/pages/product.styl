@import "../variables.styl"

/* Product styles */
#product
  overflow visible
  .page-content
    relative false
    min-height 660px
    padding-bottom 5px
    margin-bottom -32px
  .title
    height 110px
    absolute 50px 0 0
    z-index 1
    margin auto 0
    .bold
      font-size 75px
  .illustrations
    top 70px
    left -1px
    z-index 0
    size 700px 760px
    overflow visible
      
    .illustration
      overflow hidden
      size 100%
      &.show
        opacity 1
      &.hover-1
        animation none
        max-height 0
        z-index 3
      &.image-1
        z-index 2
      &.image-1
      &.hover-1
        retina-image('~images/pages/product-1.png', 100% auto, "@2x")
      &.image-2
      &.image-3
        size 1004px 1006px
        transform translate3d(-50%, -50%, 0) scale(0.694)
        transform-origin 50% 50%
      &.image-2
        z-index 1
        retina-image('~images/pages/product-2.png', 1004px 1006px, "@2x")
      &.image-3
        z-index 0
        retina-image('~images/pages/product-3.png', 1004px 1006px auto, "@2x")
  .texts
    opacity 0
    absolute 415px 0 0
    margin auto
    display table
  .subtitle
    font-size 26px
    font-weight 300
    line-height 42px
    letter-spacing 1px
    margin-bottom 10px
    text-align center
  .text
    width 100%
    font-size 16px
    text-align center
  .next-link
    animation fade-in 0.2s linear reverse forwards
    
  &.slide-1
    .title
      animation fade-in 1s linear 0.5s forwards
    .illustrations 
      .image-1
        animation fade-in 1.5s linear 1s forwards
      .image-2
      .image-3
        animation fade-out 0s linear forwards
      .hover-1
        max-height 1006px
        transition opacity 0.5s linear,
                   max-height 0s linear 3.5s
        &.hover
          cursor pointer
          &:hover
            opacity 1
    .next-link
      animation fade-in 1s linear 2.5s forwards
      
  &.slide-2
    .title
      animation fade-out 2s linear forwards
    .illustrations
      .hover-1
        max-height 1006px
        transition opacity 0.5s linear,
                   max-height 0s linear 3.5s
        // animation fade-out 2s linear 0.5s forwards
      .image-1
        animation fade-out 2s linear forwards
      .image-2
        animation fade-in 2s linear 0s normal forwards,
                  fade-out 1s linear 2.5s normal forwards
        transition transform 1s ease-in-out 2.5s
      .image-3
        animation fade-in 1s linear 2.5s forwards
        transition transform 1s ease-in-out 2.5s
      .image-2
      .image-3
        transform translate3d(-50%, -50%, 0) scale(1)
    .texts
    .text
      animation fade-in 1s linear 3.5s forwards
    .next-link
      animation fade-in 0.2s linear reverse forwards,
                fade-in 1s linear 4.5s forwards
    
$start = 720px
$step = 60px
for $i in 0..30
  $height = $start + $i * $step
  $before = $height - $step
  $padding = $i * $step
  +media-query(only screen, min-height $height)
    #product .page-content
      &:before
        height $before
     #product .texts
       padding-top $padding