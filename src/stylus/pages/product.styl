@import "../variables.styl"

/* Product styles */
#product
  .page-content
    relative false
    height 425px
  .title
    absolute 312px false false 0
    opacity 0
    // transition opacity $product-title-transition-time linear
  .illustrations
    size 713px 634px
    opacity 0
    // transform scale(0.8)
    // transition opacity $product-illustrations-opacity-time linear $product-illustrations-delay
    transition opacity 1.5s linear 2s
      
    .illustration
      transition opacity $product-illustration-1-opacity-time linear $product-illustration-1-delay
      &.show
        opacity 1
      &.image-1
        retina-image('~images/pages/product-1.png', 1004px 1006px, "@2x")
        // transition opacity 0.2s linear
      &.image-2
        retina-image('~images/pages/product-2.png', 1004px 1006px, "@2x")
        // transition opacity 0.2s linear
      &.image-3
        retina-image('~images/pages/product-3.png', 1004px 1006px, "@2x")
        // transition opacity 0.2s linear
  .texts
    opacity 0
    margin-bottom 31px
  .subtitle
    font-size 24px
    font-weight 300
    line-height 28px
    margin-bottom 20px
    text-align center
  .text
    text-align center
  // .next-link
  //   opacity 0

  &.slide-1
  &.slide-2
    .illustrations
      opacity 1
  &.slide-1
    .title
      opacity 1
      transition opacity 1s linear 0.5s
    .image-1
      opacity 1
      transition opacity 1.5s linear 1s
    // .page-footer
    //   padding-top 32px
    .next-link
      // opacity 1
      animation next-in 1s linear 3s forwards
      
  &.slide-2
    .title
      opacity 0
      transition opacity 1s linear
    .illustrations
      transform scale(1.2)
      transition transform 1s linear 1s
    .image-1
      opacity 0
      transition opacity 1s linear
    .image-2
      opacity 1
      transition opacity 1s linear
    .image-3
      opacity 1
      transition opacity 1s linear 1s
    .texts
      opacity 1
      transition opacity 1s linear 1s
    .next-link
      // opacity 1
      animation next-out 0.5s linear forwards
      animation next-in 1s linear 2s forwards
    
