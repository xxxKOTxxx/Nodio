@import "../variables.styl"

/* Product steady styles */
#product-steady
  .illustrations
    .illustration
      &.device
        retina-image('~images/pages/product-steady.png', 100% auto, "@2x")
      &.border
        retina-image('~images/pages/product-steady-border.png', 100% auto, "@2x")
  .title
    transition opacity $product-title-transition-time linear
  .next-link
    margin-top 32px
  &.show
    .number
      animation slide-down 0.5s linear forwards
    .illustrations
      opacity 1
      .illustration
        &.device
          animation slide-right-centered 0.7s linear 0.5s forwards
        &.border
          animation blink $content-blink-animation-time linear 1s forwards
    .title
      animation slide-down 0.5s linear 2.5s forwards
    .text
      animation slide-up 0.5s linear 3s forwards
    .next-link
      animation fade-in 1s linear 3.5s forwards
        
$start = 720px
$step = 60px
$delta = 390px
for $i in 0..30
  $height = $start + $i * $step
  $before = $height - $delta
  +media-query(only screen, min-height $height)
    #product-steady .page-content
      &:before
        height $before
