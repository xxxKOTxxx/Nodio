@import "../variables.styl"

/* Product steady styles */
#product-steady
  .illustrations
    .illustration
      &.device
        retina-image('~images/pages/product-steady.png', 100% auto, "@2x")
      &.border
        retina-image('~images/pages/product-steady-border.png', 100% auto, "@2x")
      
$start = 720px
$step = 61px
for $i in 0..30
  $height = $start + $i * $step
  $content = floor($i / 2) * $step
  $texts = ceil(floor(($i + 1) / 2) * $step / 2)
  +media-query(only screen, min-height $height)
    #product-steady 
      .page-content
        margin-top $content
      .texts
        &:before
        &:after
          height $texts