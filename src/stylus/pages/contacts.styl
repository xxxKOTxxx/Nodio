@import "../variables.styl"

/* Contacts styles */
#contacts
  .page-content
    padding 71px 0 55px
  .header
    font-size 60px
    font-weight 700
    color $contacts-header-color
    margin-bottom 78px
    letter-spacing 4px
    
  form
    display inline-block
    vertical-align top
    margin-bottom 31px
  
    &.message
      size 361px 299px
      margin-right 59px
    &.subscribe
      size 421px 299px
  .form-content-wrap
    relative false
    padding 30px 30px 19px
    border 1px solid $contacts-button-border-color
    border-bottom 0 none
    
  .input-wrap
    size 100% 61px
    relative false
    box-sizing border-box
    border 1px solid $contacts-input-border-color
    .point
      background-color $contacts-input-point-color
    
  input
  textarea
    font-size 18px
    font-weight 300
    padding 18px 27px
    box-sizing border-box
    outline none
    background-color transparent
    color $contacts-input-color
    letter-spacing 1px
    +placeholder()
      color $contacts-input-placeholder-color
  input
    size 100% 60px
    border 0px none
  textarea
    display block
    size 100% 179px
    margin 0
    border-top 0 none
    border-bottom 0 none
    resize none
    border-left 1px solid $contacts-input-border-color
    border-right 1px solid $contacts-input-border-color
    
  button
    relative false
    size 100% 61px
    box-sizing border-box
    padding 0 0 0 27px
    outline none
    font-size 18px
    font-weight 600
    letter-spacing 3px
    color $contacts-button-color
    text-align left
    text-transform uppercase
    background-color transparent
    border 1px solid $contacts-button-border-color
    transition border-color 0.2s linear
    cursor pointer
    &:hover
      border-color $contacts-button-color
    
  h2
    font-size 30px
    font-weight bold
    margin-bottom 29px
    
  .text
    padding-right 20px
    font-size 12px
    font-weight 300
    line-height 17px
    letter-spacing 0.5px
    margin-top 19px
    

  .socials
    font-size 0
    .social
      relative false
      display inline-block
      vertical-align middle
      size 61px
      margin 0 59px 0 0
      fill $turquoise-20
      transition fill 0.2s linear,
                 background-color 0.2s linear
      &:after
        content ''
        size 59px 1px
        margin auto
        absolute 0 false 0 61px
        background-color $contacts-button-border-color
      &:hover
        fill $turquoise
      &:last-of-type:before
        content ''
        size 1px
        margin auto
        absolute 0 false 0 120px
        background-color $turquoise
      svg
        &.social-logo
          absolute 0
          z-index 1
          margin auto
          size 40%
          fill $white
          stroke transparent
        &.social-border
          absolute 0 false 0 0
          z-index 0
          size 120px 61px
    .nodio
      font-size 16px
      font-weight 300
      margin-left 8px
      display inline-block
      vertical-align middle
  .links
    padding-left 5px
    text-align center