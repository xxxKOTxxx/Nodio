@import "../variables.styl"

/* Xana styles */
#xana
  .page-content
    padding 73px 0 80px
  .header
  .text-right
    display inline-block
    vertical-align middle
  .header
    size 275px 50px
    fill $white
    margin-right 10px
  .text-right
    width 555px
    font-size 12px
    font-weight 100
    line-height 17px
    letter-spacing 1px
    color $white-50
  .subheader
    margin 72px 0 54px
    font-size 18px
    font-weight 100
    .bold
      font-weight bold
  .features
    font-size 0
  .feature
    display inline-block
    vertical-align top
    width 240px
    margin 0 60px 30px 0
    &:nth-of-type(3n)
      margin-right 0
    .title
      margin-bottom 13px
      font-size 30px
      font-weight bold
      text-align center
    .text
      padding 0 5px
      font-size 12px
      font-weight 100
      line-height 23px
      letter-spacing 0.5px
      color $white-50
      text-align justify
      -moz-text-align-last center
      text-align-last center
    &.illustration
      relative false
      height 152px
      .illustration
        absolute 50% false false 50%
        margin auto
        size 420px 211px
        retina-image('~images/pages/xana.png', 420px 211px, "@2x")
        background-position 50% 50%
        background-repeat no-repeat
        transform translate(-50%, -50%)