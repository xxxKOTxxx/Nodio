@import "../variables.styl"

/* Product styles */
#product-tech
  .page-header
    margin-bottom -96px
  .page-content
    padding-bottom 51px
    font-size 0
  .illustrations
    left 6px
    position relative
    size 413px 500px
    display inline-block
    vertical-align top
    .illustration
      size 100%
      retina-image('~images/pages/product-tech.png', 100% auto, "@2x")
  
  .right-side
    width 390px
    display inline-block
    vertical-align top
    margin 12px 0 0 38px
  .title
    margin-bottom 60px
    transition opacity $product-title-transition-time linear
  .links
    text-align left
    margin-top 83px
  .delimiter
    margin 0 39px
  &.show
    .title
    .illustrations
      opacity 1
      .illustration
        opacity 1
    .texts
    .text
      opacity 1
      transition opacity $product-text-opacity-time linear $product-text-delay
        
$start = 720px
$step = 60px
for $i in 0..30
  $height = $start + $i * $step
  $before = floor(($i + 1) / 2) * $step
  $after = floor($i / 2) * $step
  
  +media-query(only screen, min-height $height)
    #product-tech .page-content
      &:before
        height $before
      &:after
        height $after