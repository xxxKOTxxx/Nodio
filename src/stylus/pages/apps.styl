@import "../variables.styl"

/* Apps styles */
#apps
  .page-content
    padding 71px 0 44px
  .left-side
    width 315px
    display inline-block
    vertical-align top
    margin-right 58px
  .header
    font-size 60px
    font-weight bold
    color $white
    margin 0 70px 89px 0
  .text
    margin-bottom 30px
    font-size 16px
    font-weight 100
    line-height 30px
    color $white-50
  
  .link
    text-decoration none
    color $turquoise
    border-bottom 1px solid $turquoise-50
    transition border-color $transition-time linear
    &:hover
      border-color $turquoise
    
  .illustration
    relative false
    display inline-block
    vertical-align top
    size 465px 482px
    margin-top 53px
    retina-image('~images/pages/apps.png', 482px 440px, "@2x")
    background-position 50% 50%
    background-repeat no-repeat
    
  .left
  .center
  .right
    absolute false
    font-size 12px
    font-weight 100
    text-align center
    letter-spacing 1.3px
  .left
  .right
    top 40px
    width 28%
  .left
    left 0
  .right
    right 0
  .center
    top 0
    width 44%
    left 0
    right 0
    margin auto