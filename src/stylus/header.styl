@import "variables.styl"

/* Header styles */
header
  absolute 30px 50px false
  z-index 3
  overflow hidden
  
  dl
    padding 10px 0
    font-size $header-font-size
    line-height $header-line-height
    text-transform uppercase
    transition margin-top 0.3s linear
    &.progress
      padding-bottom 30px
  dt
  dd
    vertical-align middle
    opacity 0.3
  dt
    display inline-block
    width 110px
  dd
    display inline
    &.percent
      opacity 0.7

.user-data-block
  absolute 52px 0 0
  overflow hidden
