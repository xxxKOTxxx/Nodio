@import "variables.styl"

/* Header styles */
header
  absolute 30px false false 50px
  z-index 3
  
  dl
    padding 14px 0
    font-size header-font-size
    line-height header-font-size
    text-transform uppercase
    
  dt
  dd
    display inline-block
    vertical-align top
    opacity 0.3
  dt
    width 110px
  dd
    &.percent
