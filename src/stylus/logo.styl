.logo
.square
  absolute 50% false false 50%
  transform: translate(-50%, -50%);
  margin auto
.logo
  size 120px
  z-index 1
  svg
    size 100%
    display block
    fill logo-color
.square
  size 81px
  z-index 0
  border 0px solid square-borser-color
  transform-origin 85% -35%
  transform rotate(45deg) translate3d(0, 0, 0)
  &.go
    size 80vmax
    opacity 0
    border-width 15px
    transition width square-transition-time cubic-bezier(0.215, 0.61, 0.355, 1),
               height square-transition-time cubic-bezier(0.215, 0.61, 0.355, 1),
               opacity square-transition-time cubic-bezier(0.215, 0.61, 0.355, 1),
               border-width square-transition-time cubic-bezier(0.215, 0.61, 0.355, 1)


.logo-inner
.logo-middle
.logo-outer
  transform scale(0)
.logo-border
  opacity 0
.ready
  .logo-inner
    animation scale-in logo-transition-time linear forwards
  .logo-middle
    animation scale-in logo-transition-time linear forwards logo-transition-time
  .logo-outer
    animation scale-in logo-transition-time linear forwards logo-transition-time * 2
  .logo-border
    animation fade-in 0s linear forwards logo-transition-time * 3
  .square
    animation square-scale square-transition-time linear logo-transition-time * 3
    
  .logo-inner
    &.item-1
      transform-origin 50% 44% 0
    &.item-2
      transform-origin 56% 50% 0
    &.item-3
      transform-origin 50% 56% 0
    &.item-4
      transform-origin 44% 50% 0
