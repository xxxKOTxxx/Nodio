  @keyframes scale-in
    0%
      transform scale(0)
    100%
      transform scale(1)
  @keyframes fade-in
    0%
      opacity 0
    100%
      opacity 1
  @keyframes square-scale
    to
      size 80vmax
      opacity 0
      border-width 15px
      transition width square-transition-time cubic-bezier(0.215, 0.61, 0.355, 1),
                 height square-transition-time cubic-bezier(0.215, 0.61, 0.355, 1),
                 opacity square-transition-time cubic-bezier(0.215, 0.61, 0.355, 1),
                 border-width square-transition-time cubic-bezier(0.215, 0.61, 0.355, 1)
      