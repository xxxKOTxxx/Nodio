#contacts.page(data-title="Contact us")
  .page-header
    h1.header Contact us

  .page-content
    form.message.send-form(name="message" action="/php/send.php" method="post")
      .input-wrap
        input(
          type="email"
          name="email"
          placeholder="E-mail"
        )
        .point.top.left
        .point.top.right
        .point.bottom.left
        .point.bottom.right
      textarea(
        name="message"
        placeholder="Message"
      )
      button(type="submit") Send
        .point.top.left
        .point.top.right
        .point.bottom.left
        .point.bottom.right

    form.subscribe.send-form(name="subscribe" method="post" action="/php/send.php")
      .form-content-wrap
        .point.top.left
        .point.top.right
        h2 Get Involved!
        .input-wrap
          input(
            type="email"
            name="email"
            placeholder="E-mail"
          )
          .point.top.left
          .point.top.right
          .point.bottom.left
          .point.bottom.right
        p.text Subscribe to receive an occasional newsletter about Nodio. We value your privacy and guarantee to keep your email address safe.

      button.subscribe(type="submit") SUBSCRIBE FOR A NEWSLETTER
        .point.top.left
        .point.top.right
        .point.bottom.left
        .point.bottom.right

  .page-footer
    .socials
      a.social.facebook(
        href="http://fb.me/nodioproject"
        title="Facebook"
      )
        svg.social-logo
          use(xlink:href="#facebook")
        svg.social-border
          use(xlink:href="#socials")
      a.social.twitter(
        href="https://twitter.com/nodioproject"
        title="Twitter"
      )
        svg.social-logo
          use(xlink:href="#twitter")
        svg.social-border
          use(xlink:href="#socials")
      a.social.slack(
        href="http://slack.com"
        title="Slack"
      )
        svg.social-logo
          use(xlink:href="#slack")
        svg.social-border
          use(xlink:href="#socials")
      a.social.reddit(
        href="https://www.reddit.com/user/Nodioproject/"
        title="Reddit"
      )
        svg.social-logo
          use(xlink:href="#reddit")
        svg.social-border
          use(xlink:href="#socials")
      a.social.github(
        href="https://github.com/nodioproject"
        title="Github"
      )
        svg.social-logo
          use(xlink:href="#github")
        svg.social-border
          use(xlink:href="#socials")
      a.social.btt(
        href="http://btt.com"
        title="Btt"
      )
        svg.social-logo
          use(xlink:href="#btt")
        svg.social-border
          use(xlink:href="#socials")
